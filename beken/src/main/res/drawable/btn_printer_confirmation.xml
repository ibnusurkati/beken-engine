<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:color="@color/white_color">
        <shape android:shape="rectangle" >
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="@color/accent_color"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/white_color"
                />
        </shape>
    </item>

    <item android:color="@color/accent_color">
        <shape android:shape="rectangle" tools:ignore="StateListReachable">
            <corners
                android:radius="10dp"
                />
            <solid
                android:color="@color/white_color"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <stroke
                android:width="1dp"
                android:color="@color/accent_color"
                />
        </shape>
    </item>

</selector>